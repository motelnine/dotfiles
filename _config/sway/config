### =========================
### Core
### =========================
set $mod Mod4
font pango:monospace 12
floating_modifier $mod
focus_follows_mouse no

### =========================
### Terminals
### =========================
bindsym $mod+t exec kitty
bindsym $mod+Return exec xfce4-terminal

### =========================
### Kill / Quit
### =========================
bindsym $mod+q kill
bindsym $mod+Shift+q kill

### =========================
### Screenshots (Wayland-native)
### =========================
# Requires grim + slurp
bindsym $mod+Print exec grim ~/Pictures/screenshot-$(date +%s).png
bindsym $mod+Shift+Print exec grim -g "$(slurp)" ~/Pictures/screenshot-$(date +%s).png

### =========================
### Launchers
### =========================
bindsym $mod+d exec rofi -show drun -show-icons
bindsym $mod+Shift+d exec rofi -show run
bindsym F2 exec rofi -dmenu

### =========================
### Focus movement
### =========================
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

### =========================
### Move windows
### =========================
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

### =========================
### Layout
### =========================
bindsym $mod+Control+h split h
bindsym $mod+Control+v split v

bindsym $mod+f fullscreen toggle
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

bindsym $mod+Shift+space floating toggle
bindsym $mod+Shift+s sticky toggle
bindsym $mod+space focus mode_toggle

### =========================
### Media (Audacious)
### =========================
bindsym $mod+Mod1+l exec audacious -p -f
bindsym $mod+Mod1+h exec audacious -p -r
bindsym $mod+Mod1+space exec audacious --play-pause

#### =========================
#### Waybar
#### =========================
exec dbus-update-activation-environment --systemd DISPLAY WAYLAND_DISPLAY SWAYSOCK XDG_CURRENT_DESKTOP=sway
exec systemctl --user import-environment DISPLAY WAYLAND_DISPLAY SWAYSOCK XDG_CURRENT_DESKTOP
exec_always --no-startup-id waybar
exec_always --no-startup-id volumeicon

