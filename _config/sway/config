### =========================
### Resize Mode
### =========================
mode "resize" {
    bindsym h resize grow width 5
    bindsym l resize shrink width 5
    bindsym k resize shrink height 5
    bindsym j resize grow height 5

    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

### =========================
### Gaps
### =========================
smart_gaps on
smart_borders no_gaps
gaps inner 15
gaps outer -10

### =========================
### Borders
### =========================
default_border pixel 1
default_floating_border pixel 1

### =========================
### Colors
### =========================
set $base0D #295264
set $base00 #00000000

client.focused          $base0D $base0D $base00 $base0D
client.unfocused        #222222 #222222 #888888 #222222
client.focused_inactive #333333 #333333 #aaaaaa #333333
client.urgent           #ff0000 #ff0000 #ffffff #ff0000

### =========================
### Floating rules
### =========================
for_window [app_id="thunar"] floating enable
for_window [app_id="keepassxc"] floating enable
for_window [app_id="vlc"] floating enable
for_window [app_id="audacious"] floating enable
for_window [app_id="gnome-calculator"] floating enable
for_window [app_id="stacer"] floating enable
for_window [app_id="tauon"] floating enable

### =========================
### Volume
### =========================
bindsym XF86AudioMute exec volume toggle
bindsym XF86AudioLowerVolume exec /bin/volume down
bindsym XF86AudioRaiseVolume exec /bin/volume up

### =========================
### Lock screen
### =========================
bindsym $mod+Shift+x exec swaylock -f -c 000000

### =========================
### Startup
### =========================
exec_always swaybg -i ~/Pictures/Wallpaper/astro.jpg -m tile
exec easyeffects --gapplication-service
exec volumeicon
exec steam-runtime -silent
exec cherrytree
exec keepassxc
exec xfce4-terminal --hold -x '/bin/syncup'

### =========================
### Keyboard
### =========================
input * {
    xkb_layout us
    xkb_options caps:escape
}

### =========================
### Idle / DPMS
### =========================
exec swayidle -w \
    timeout 300 'swaylock -f -c 000000' \
    timeout 600 'swaymsg "output * dpms off"' \
    resume 'swaymsg "output * dpms on"'
